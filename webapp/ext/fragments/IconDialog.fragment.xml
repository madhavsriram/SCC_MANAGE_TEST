<core:FragmentDefinition xmlns="sap.m"  xmlns:layout="sap.ui.layout"
 xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form"  	xmlns:up="sap.m.upload">
 <Dialog title="" class="bgHeader dialogbgText" contentWidth="40rem" titleAlignment="Center" id="ListDialog"  afterClose="onAfterClose" >
  <!-- id="ListDialog" -->
    <layout:VerticalLayout  width="100%">

        <layout:HorizontalLayout class="sapUiSmallMargin">
            <Label text="Credit Request Qty" textAlign="" width="9em" class="sapUiTinyMarginTop"/>
   	        <StepInput id="idstep" value="0" min="0" change="onChange" width="8em" textAlign="Center" enabled="false"/>
   
            <Label text="Credit Type" textAlign="Center"  width="8em"  class="sapUiTinyMarginTop"/>
            <ComboBox class="sapUiLargeMarginEnd" enabled="false" placeholder="Select" id ="idcbox" textAlign="Center" selectionChange ="oSelectionchange" items="{path:'/CRType',
			sorter: {
				path: 'Sequence'
			},filters: { path: 'SCCCRtype', operator: 'EQ', value1: 'Y' } }" >
                <items>
                    <core:Item  key="{Id}" text="{Description}"/>
                </items>
            </ComboBox>
        </layout:HorizontalLayout>

        <layout:HorizontalLayout class="sapUiSmallMargin">
            <Label  text="Approve Qty" id="appQtyText" textAlign="Center" width="8em" class="sapUiTinyMarginTop" visible="{= ${CreditReqHdrModel>/items/0/StatusDescription} === 'Under Review' ? true : false }"/>
            <StepInput id="apprQty" value="0" min="0" change="onApproveChange" width="8em" textAlign="Center" enabled="{= ${CreditReqHdrModel>/items/0/StatusDescription} === 'Under Review' ? true : false }" visible="{= ${CreditReqHdrModel>/items/0/StatusDescription} === 'Under Review'  ? true : false }"/>
            
            <Label  text="Max Qty" id="openQtyText" textAlign="Center" width="8em" visible="{= ${CreditReqHdrModel>/items/0/StatusDescription} === 'Under Review' ? false : true }" class="sapUiTinyMarginTop"/>
            <Text id="openqty" width="9em" textAlign=""  visible="{= ${CreditReqHdrModel>/items/0/StatusDescription} === 'Under Review' ? false : true }" class="sapUiTinyMarginTop"/>
            
            <Label text="Re-Classify" id="idReClasiLabel" required="true" textAlign="Center"  width="8em"  class="sapUiTinyMarginTop sapUiSmallMarginBegin" visible="false"/>
            <ComboBox id="idReClasi" class="sapUiLargeMarginEnd" textAlign="Center" visible="false" enabled="{= ${CreditReqHdrModel>/items/0/StatusDescription} === 'Under Review' ? true :${CreditReqHdrModel>/items/0/StatusDescription} === 'Submitted' ? true :${CreditReqHdrModel>/items/0/StatusDescription} === 'Draft' ? true : false }">
                <core:Item key="1" text="Supplier Chain Spoiled (SCS)" ></core:Item>
                <core:Item key="2" text="Supplier (RTV)" ></core:Item>
            </ComboBox>
        </layout:HorizontalLayout>
   </layout:VerticalLayout> 
  
  	<f:SimpleForm id="Damage"
			editable="true"
			layout="ResponsiveGridLayout"
			title="Damage" visible="true"
            
			adjustLabelSpan="false"
			singleContainerFullSize="false"  >
			<f:content>
    
				<Label text="Lot Code" textDirection="RTL" >
                   	<layoutData>
						<layout:GridData span="XL1 L2 M2 S2" />
					</layoutData>
                </Label>
				<Input id="LotCode" value="" maxLength="30" enabled="false"> 
              	    <layoutData>
						<layout:GridData span="XL1 L2 M4 S3" />
					</layoutData>
                </Input>
				<Label text="Expiry Date" >
                     <layoutData>
                         <layout:GridData  span="XL1 L2 M2 S3"/>
                </layoutData>
                </Label>
         <!-- <Input id="comment" value="{HouseNumber}"> -->
                <DatePicker id="Expdate"  valueFormat="yyyy-MM-dd"  displayFormat="MM-dd-yyyy" enabled="false" valueStateText="MM-dd-yyyy">
					<layoutData>
						<layout:GridData span="XL1 L2 M4 S3" />
					</layoutData>
                </DatePicker>
				<!-- </Input> -->
				<!-- <Label text="Comment" > -->
                 <!-- <layoutData>
                 <layout:GridData span="L2 M2"/>
                 </layoutData> -->
                 <!-- </Label>
                 <TextArea id="coments" enabled="false"/> -->
                	
				<Label text="Photo" />
                <up:UploadSet afterItemAdded="onAfterItemAdded" uploadCompleted="onUploadCompleted" uploadEnabled="true" beforeItemAdded="onBeforeItemAdded" afterItemRemoved="onRemoveItem" instantUpload="false" id="attachmentUpl" > 
					
					
                </up:UploadSet >

         
        
			
			</f:content>
		</f:SimpleForm>
	 <f:SimpleForm id="Shortage"
			editable="true"
			layout="ResponsiveGridLayout"
			title="Shortage" visible="true"
            adjustLabelSpan="false"
			singleContainerFullSize="false"
			  >
			<f:content>
    
				<Label text="Delivery Date"  >
                   <layoutData>
						<layout:GridData span="XL1 L2 M4 S2" />
					</layoutData>
        </Label>
				<DatePicker enabled="false"  id="DeliveryDate" valueFormat="yyyy-MM-dd"  displayFormat="MM-dd-yyyy" valueStateText="MM-dd-yyyy"> 
              	<layoutData>
						<layout:GridData span="XL1 L2 M4 S3" />
					</layoutData>
                </DatePicker>
							<Label text="Photo" />
                <up:UploadSet afterItemAdded="onAfterItemAdded" uploadCompleted="onUploadCompleted" uploadEnabled="true" beforeItemAdded="onBeforeItemAdded" afterItemRemoved="onRemoveItem" instantUpload="false" id="attachmentUplSht" > 
					
					
                </up:UploadSet >	
			</f:content>
		</f:SimpleForm>
   
        <f:SimpleForm id="Quality"
			editable="true"
			layout="ResponsiveGridLayout"
			title="Quality" visible="true"
			labelSpanXL="4"
			labelSpanL="4"
			labelSpanM="12"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="0"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="2"
			columnsM="2"
			singleContainerFullSize="false"  >
			<f:content>
    <core:Title text="" />
				<Label text="Product Category"  required="true">
                  
                </Label>
				<!-- <ComboBox enabled="false" selectedKey="{Quality>/items/0/ProductName}" change="onProductName" selectionChange="onProductName"
				items="{
					path: '/ProductName'
				}">
				<core:Item key="{Id}" text="{Desc}" />
			</ComboBox> -->
           <Input enabled="false" value="{qualityModel>/ProductType}"></Input>
                
                
            
                <Label text="Product Issue"  required="true">
                  
                 </Label>
				  
                 <MultiComboBox enabled="true" selectedKeys="{qualityModel>/ProductIssue}" id ="idProductIssueMCB"  selectionFinish ="onProductissue" items="{productIssueModel>/}" >
     <items>
		<core:Item  key="{productIssueModel>IssueCode_Id}" text="{productIssueModel>IssueDesc}"/>
	</items>
       </MultiComboBox>
       <Label text="Use By Date"  >
                  
                 </Label>
				<DatePicker enabled="false" valueFormat="yyyy-MM-dd"  displayFormat="MM-dd-yyyy" value="{qualityModel>/UseByDate}" valueStateText="MM-dd-yyyy"></DatePicker>
                    <Label text="Julian Date"  >
                  
                 </Label>
				<DatePicker enabled="false" valueFormat="yyyy-MM-dd"  displayFormat="MM-dd-yyyy" value="{qualityModel>/JulianDate}" valueStateText="MM-dd-yyyy"></DatePicker>

       <core:Title text="" />
       	<Label text="Lot Code"  >
                  
                 </Label>
				<!-- <Input id="QLotCode" value="{SupplierName}">  -->
                <Input id="QLotCode" value="{qualityModel>/LotCode}" enabled="false"> 
						
                </Input> 
         <Label text="Manufacture Date"  >
                          </Label>
				<DatePicker  enabled="false" valueFormat="yyyy-MM-dd"  displayFormat="MM-dd-yyyy" value="{qualityModel>/ManufactureDate}" valueStateText="MM-dd-yyyy"></DatePicker>
                
                 <Label text="Expiration Date">
                  
                 </Label>
				<DatePicker enabled="false" valueFormat="yyyy-MM-dd"  displayFormat="MM-dd-yyyy" value="{qualityModel>/ExpirationDate}" valueStateText="MM-dd-yyyy"></DatePicker>
            
                <Label text="Best Before Date">
                  
                 </Label>
				<DatePicker enabled="false" valueFormat="yyyy-MM-dd"  displayFormat="MM-dd-yyyy" value="{qualityModel>/BestBeforeDate}" valueStateText="MM-dd-yyyy"></DatePicker>
              
				
			</f:content>
		</f:SimpleForm>
<f:SimpleForm id="idQualityPhoto"
			editable="true"
			layout="ResponsiveGridLayout"
			 visible="true"
            
			adjustLabelSpan="false"
			singleContainerFullSize="false"  >
			<f:content>
    
				
                	
				<Label text="Photo" />
                <up:UploadSet  afterItemAdded="onAfterItemAdded" id="attachmentUpl1" 
                uploadCompleted="onUploadCompleted" uploadEnabled="true" beforeItemAdded="onBeforeItemAdded" afterItemRemoved="onRemoveItem" instantUpload="false"	 >
                	<!-- <up:items>
				<up:UploadSetItem
						fileName="{QualityPhoto>FileName}"
						mediaType="{QualityPhoto>MediaType}"
						 url= "{/AttachmentRow}"
                        	>
				
				</up:UploadSetItem>
			</up:items> -->
                 </up:UploadSet >

         
        
			
			</f:content>
		</f:SimpleForm>
         <f:SimpleForm id="NotShipped" editable="true" layout="ResponsiveGridLayout" title="Not Shipped" visible="false" adjustLabelSpan="false" singleContainerFullSize="false"  >
         <f:content>
         <!-- <Label text="Comments" required="true"></Label>
         <TextArea id="c"></TextArea> -->
         </f:content>
         </f:SimpleForm>

 
  <beginButton>
   <Button id="Idsave" text="Save" press="onSaveCRItems" enabled="{= ${CreditReqHdrModel>/items/0/StatusType} === 'DraftSCC' ? false : ${CreditReqHdrModel>/items/0/StatusDescription} === 'Submitted' ? false :${CreditReqHdrModel>/items/0/StatusDescription} === 'Under Review' ? false :${CreditReqHdrModel>/items/0/StatusDescription} === 'Rejected' ? false:${CreditReqHdrModel>/items/0/StatusDescription} === 'Cancelled' ? false: true }"/>
  </beginButton>
  <endButton>
   <Button text="Cancel" press="onClose" />
  </endButton>
 </Dialog>

</core:FragmentDefinition>